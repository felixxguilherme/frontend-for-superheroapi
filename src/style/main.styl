@import url('https://fonts.googleapis.com/css2?family=Barlow+Condensed&display=swap')

*
*::before
*:
    font-family 'Barlow Condensed', sans-serif
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    box-sizing border-box   

body
    margin 0
    padding 0
    text-align center
    font-family 'Barlow Condensed', sans-serif

    width 100%
    height 100%

    background-color #f1f1f145

    //overflow-x hidden

.home
    display flex
    justify-content center
    flex-direction column

.home__main
    display flex
    justify-content center
    align-items center
    margin 1.5em auto
    width 80vw

.home__main_cards
    display flex
    flex-wrap wrap
    justify-content center


.header_top
    display flex
    flex-direction row
    align-items center
    justify-content space-around
    height 10%

    position fixed
    width 100%
    z-index 9999

.navbar__container
    height 20vh

.nav__bar
    display flex
    justify-content center
    width 100%

.nav__bar_item
    padding 0.5em
    font-size 1.5em
    cursor pointer

    a
        text-decoration none
        color black

    &:hover
        background-color #fff4e6
        border-bottom solid 4px black
    
.container
    display flex
    flex-direction column
    justify-content center
    align-items center

    background-image url("https://hdqwalls.com/wallpapers/spider-man-noir-5k-ib.jpg")
    background-size cover
    background-position center
    width 100%
    height 80vh

input:focus
    outline: none !important

.herosearch__group 
	position relative
	padding 15px 0 0

.herosearch__input 
	font-family inherit
	width 100%
	border 0
	border-bottom 2px solid white
	outline 0
	font-size 1.3rem
	color #fff
	padding 7px 0
	background transparent
	transition border-color 0.2s
	&::placeholder 
		color transparent
	&:placeholder-shown 
		& ~ .herosearch__label 
			font-size 1.3rem
			cursor text
			top 20px
	&:focus 
		padding-bottom 6px
		font-weight 700
		border-width 3px
		border-image linear-gradient(to right, #FFFFFF, #ECECEC)
		border-image-slice 1
		& ~ .herosearch__label 
			position absolute
			top 0
			display block
			transition 0.2s
			font-size 1rem
			color white
			font-weight 700

.herosearch__label 
	position absolute
	top 20px
	display block
	transition 0.2s
	font-size 1rem
	color #9b9b9b

.herosearch__input:required, .herosearch__input:invalid 
	box-shadow none

.herosearch__button
    background-image: linear-gradient(to right, #1FA2FF 0%, #1FA2FF  100%)
    text-align center
    transition 0.5s    
    margin 15px
    width 4em
    border none
    color white
    border-radius 4px
    cursor pointer
    &:hover
        background-position right center
        color #fff
        text-decoration none

.hero__card
    margin 1em
    padding 1em
    background-color white
    width 8em
    heigth 85%

    position relative

    box-shadow: 0 1px 3px rgba(34, 25, 25, 0.4);
    -moz-box-shadow: 0 1px 2px rgba(34,25,25,0.4);
    -webkit-box-shadow: 0 1px 3px rgba(34, 25, 25, 0.4);

    h3
        margin 0
        padding 10px
        color #303a52

.hero__card_img img
    width 100%
    height 40%

.hero__card_stats
    display flex
    flex-direction column

.hero__card_stats-item
    display flex
    flex-direction row
    align-items center
    justify-content space-between
    line-height 20px
    text-align center

    color #303a52


    label
        font-size 1em
        font-weight 700
    p
        margin 5px
        padding 0
        font-size 1.2em

.hero__card_button img
    width 3em !important
    height 3em !important
    cursor pointer

    position absolute
    right -26px
    bottom -10px
    opacity 0.9

    background-color white
    border-radius 50%

    &:hover
        opacity 1
        background-color #7C9473

.hero__item
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    padding 1em 
    margin 1em

    width 20vw

    background-color red

    img
        width 5em
        height 5em

.hero__item_description
    display flex
    flex-direction column
    justify-content center
    align-items center

    p
        padding 0
        margin 0

.hero__item_icon-view
    background-image url("../assets/icons/info.svg")
    width 30px
    height 30px
    background-size cover
    margin 5px

.collection__modal_counter
    cursor pointer
    color white
    font-family 'Barlow Condensed', sans-serif

.collection__modal_window
    position fixed
    top 0
    left 0
    width 100%
    height 100vh
    z-index 9998
    display flex
    align-items center
    justify-content center

.collection__modal_window-wrapper
    background-color white
    padding 25px
    border-radius 15px

.collection__modal_filters
    display flex
    flex-direction row
    justify-content center

.collection__modal_filters-item
    margin 15px
    position relative

    span
        position absolute
        left -15px

.collection__modal_window-container
    width 800px
    margin 0px auto
    padding 20px 30px
    border-radius 15px

    display flex
    flex-wrap wrap
    justify-content center

    overflow-y auto

.collection__modal_window-filters
    display flex 
    flex-direction row
    justify-content center
